{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnet1Name": {
      "type": "string",
      "defaultValue": "1adsite-vnet1",
      "metadata": {
        "description": "VNet1 Name"
      }
    },
    "vnet1prefix": {
      "type": "string",
      "defaultValue": "10.1.0.0/16",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },
    "vnet1subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.1.1.0/24",
      "metadata": {
        "description": "VNet1 Subnet1 Prefix"
      }
    },    
    "vnet1BastionsubnetPrefix": {
      "type": "string",
      "defaultValue": "10.1.253.0/24",
      "metadata": {
        "description": "VNet1 Bastion Subnet Prefix"
      }
    },        
    "vnet1subnet1Name": {
      "type": "string",
      "defaultValue": "1adsite-vnet1-subnet1",
      "metadata": {
        "description": "VNet1 Subnet1 Name"
      }
    },
    "dc1name": {
      "type": "string",
      "defaultValue": "dc1",
      "metadata": {
          "description": "Domain Controller1 Name"
      }
    },
    "dc1IP": {
      "type": "string",
      "defaultValue": "10.1.1.111",
      "metadata": {
          "description": "Domain Controller1 IP Address"
      }
    },
    "Publisher": {
      "type": "string",
      "defaultValue": "MicrosoftWindowsServer",
      "metadata": {
          "description": "Image Publisher"
      }
    },
    "Offer": {
      "type": "string",
      "defaultValue": "WindowsServer",      
      "metadata": {
          "description": "Image Publisher Offer"
      }
    },            
    "OSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter",
          "2012-R2-Datacenter"
        ],
        "metadata": {
            "description": "OS Version"
        }
    },
    "licenseType": {
      "type": "string",
      "defaultValue": "Windows_Server",
      "metadata": {
          "description": "License Type (Windows_Server or None)"
      }
    },     
    "DataDisk1Name": {
      "type": "string",
      "defaultValue": "NTDS",
      "metadata": {
          "description": "Data Disk Name 1"
      }
    },             
    "DC1VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Domain Controller1 VMSize"
        }
    },        
    "NetBiosDomain": {
      "type": "string",
      "defaultValue": "elliottfieldsjr",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },    
    "TLD": {
      "type": "string",
      "defaultValue": "com",
      "metadata": {
          "description": "Top-Level Domain Name"
      }
    },                        
    "ReverseLookup1": {
      "type": "string",
      "defaultValue": "10.1",
      "metadata": {
          "description": "DNS Reverse Lookup Zone1 Prefix"
      }
    },                    
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "The name of the Administrator of the new VM and Domain"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    },    
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    },    
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Region of Resources"
      }
    }
  },
  "variables": {
    "domainName": "[concat(parameters('NetBiosDomain'),'.',parameters('TLD'))]",
    "BaseDN": "[concat('DC=',parameters('NetBiosDomain'),',DC=',parameters('TLD'))]"
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "VNet",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[parameters('vnet1Name')]"
              },
              "vnetprefix": {
                  "value": "[parameters('vnet1Prefix')]"
              },
              "subnet1Name": {
                  "value": "[parameters('vnet1subnet1Name')]"
              },
              "subnet1Prefix": {
                  "value": "[parameters('vnet1subnet1Prefix')]"
              },
              "BastionsubnetPrefix": {
                "value": "[parameters('vnet1BastionsubnetPrefix')]"
              },              
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "BastionHost",
      "dependsOn": [
        "VNet"
      ],
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/bastionhost.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "publicIPAddressName": {
                "value": "[concat(parameters('vnet1Name'),'-Bastion-pip')]"
              },
              "AllocationMethod": {
                "value": "Static"
              },              
              "vnetName": {
                  "value": "[parameters('vnet1Name')]"
              },
              "subnetName": {
                  "value": "AzureBastionSubnet"
              },
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployDCVM",
      "dependsOn": [
        "VNet",
        "BastionHost"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-2disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('dc1name')]"
              },
              "computerIP": {
                  "value": "[parameters('dc1IP')]"
              },
              "Publisher": {
                  "value": "[parameters('Publisher')]"
              },
              "Offer": {
                  "value": "[parameters('Offer')]"
              },
              "OSVersion": {
                "value": "[parameters('OSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('LicenseType')]"
              },            
              "DataDisk1Name": {
                "value": "[parameters('DataDisk1Name')]"
              },            
              "VMSize": {
                "value": "[parameters('DC1VMSize')]"
              },
              "vnetName": {
                "value": "[parameters('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[parameters('vnet1subnet1Name')]"
              },            
              "vnetprefix": {
                "value": "[parameters('vnet1Prefix')]"
              },            
              "subnetPrefix": {
                "value": "[parameters('vnet1subnet1Prefix')]"
              },                                                                                                            
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "promotedc1",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/firstdc.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('dc1name')]"
              },
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },
              "DomainName": {
                "value": "[variables('DomainName')]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              }, 
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "updatevnetdns",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/updatevnetdns.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[parameters('vnet1Name')]"
              },
              "vnetprefix": {
                  "value": "[parameters('vnet1Prefix')]"
              },
              "subnetName": {
                "value": "[parameters('vnet1subnet1Name')]"
              },                                                                                                            
              "subnetPrefix": {
                "value": "[parameters('vnet1subnet1Prefix')]"
              }, 
              "BastionsubnetPrefix": {
                "value": "[parameters('vnet1BastionsubnetPrefix')]"
              },                         
              "DNSServerIP": {
                "value": [
                  "[parameters('dc1IP')]"
                ]
              },                                                                                                            
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "restartdc",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1",
        "updatevnetdns"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/restartvm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('dc1name')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                                         
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "configdns",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1",
        "updatevnetdns",
        "restartdc"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/configdns.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('dc1name')]"
              },
              "DomainName": {
                "value": "[variables('DomainName')]"
              },              
              "ReverseLookup1": {
                "value": "[parameters('ReverseLookup1')]"
              },                                                                                                            
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "createous",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1",
        "updatevnetdns",
        "restartdc",
        "configdns"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/createous.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('dc1name')]"
              },
              "BaseDN": {
                "value": "[variables('BaseDN')]"
              },              
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    }                                      
  ]
}
