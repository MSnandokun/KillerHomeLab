{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "NamingConvention": {
      "type": "string",
      "defaultValue": "khl",
      "metadata": {
        "description": "VNet1 Name"
      }
    },
    "vnet1ID": {
      "type": "string",
      "defaultValue": "10.1",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },    
    "DC1OSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter",
          "2012-R2-Datacenter"
        ],
        "metadata": {
            "description": "Domain Controller1 OS Version"
        }
    },
    "licenseType": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "Windows_Server",
        "None"
      ],      
      "metadata": {
          "description": "License Type"
      }
    },     
    "DC1VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Domain Controller1 VMSize"
        }
    },        
    "NetBiosDomain": {
      "type": "string",
      "defaultValue": "killerhomelab",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },    
    "TLD": {
      "type": "string",
      "defaultValue": "com",
      "allowedValues": [
        "com",
        "net",
        "org",
        "edu",
        "gov",
        "mil"
      ],      
      "metadata": {
          "description": "Top-Level Domain Name"
      }
    },                        
    "ReverseLookup1": {
      "type": "string",
      "defaultValue": "1.10",
      "metadata": {
          "description": "DNS Reverse Lookup Zone1 Prefix"
      }
    },                    
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "The name of the Administrator of the new VM and Domain"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    },    
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    },    
    "Location1": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "Choose Region (Example:  Commercial=EastUS, Government=USGovVirginia)"
      }
    }
  },
  "variables": {
    "vnet1Name": "[concat(parameters('NamingConvention'),'-VNet1')]",
    "vnet1Prefix": "[concat(parameters('vnet1ID'),'.0.0/16')]",
    "vnet1subnet1Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet1')]",    
    "vnet1subnet1Prefix": "[concat(parameters('vnet1ID'),'.1.0/24')]",    
    "vnet1BastionsubnetPrefix": "[concat(parameters('vnet1ID'),'.253.0/24')]",        
    "dc1name": "[concat(parameters('NamingConvention'),'-dc-01')]",           
    "dc1IP": "[concat(parameters('vnet1ID'),'.1.111')]",        
    "DCDataDisk1Name": "NTDS",            
    "domainName": "[concat(parameters('NetBiosDomain'),'.',parameters('TLD'))]",
    "BaseDN": "[concat('DC=',parameters('NetBiosDomain'),',DC=',parameters('TLD'))]"
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "VNet",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[variables('vnet1Name')]"
              },
              "vnetprefix": {
                  "value": "[variables('vnet1Prefix')]"
              },
              "subnet1Name": {
                  "value": "[variables('vnet1subnet1Name')]"
              },
              "subnet1Prefix": {
                  "value": "[variables('vnet1subnet1Prefix')]"
              },
              "BastionsubnetPrefix": {
                "value": "[parameters('vnet1BastionsubnetPrefix')]"
              },              
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "BastionHost",
      "dependsOn": [
        "VNet"
      ],
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/bastionhost.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "publicIPAddressName": {
                "value": "[concat(variables('vnet1Name'),'-Bastion-pip')]"
              },
              "AllocationMethod": {
                "value": "Static"
              },              
              "vnetName": {
                  "value": "[variables('vnet1Name')]"
              },
              "subnetName": {
                  "value": "AzureBastionSubnet"
              },
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployDCVM",
      "dependsOn": [
        "VNet",
        "BastionHost"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-2disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "computerIP": {
                  "value": "[variables('dc1IP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('DC1OSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('LicenseType')]"
              },            
              "DataDisk1Name": {
                "value": "[variables('DCDataDisk1Name')]"
              },            
              "VMSize": {
                "value": "[parameters('DC1VMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },            
              "vnetprefix": {
                "value": "[variables('vnet1Prefix')]"
              },            
              "subnetPrefix": {
                "value": "[variables('vnet1subnet1Prefix')]"
              },                                                                                                            
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "promotedc1",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/firstdc.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },
              "DomainName": {
                "value": "[variables('DomainName')]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              }, 
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "updatevnetdns",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/updatevnetdns.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[variables('vnet1Name')]"
              },
              "vnetprefix": {
                  "value": "[variables('vnet1Prefix')]"
              },
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },                                                                                                            
              "subnetPrefix": {
                "value": "[variables('vnet1subnet1Prefix')]"
              }, 
              "BastionsubnetPrefix": {
                "value": "[parameters('vnet1BastionsubnetPrefix')]"
              },                         
              "DNSServerIP": {
                "value": [
                  "[variables('dc1IP')]"
                ]
              },                                                                                                            
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "restartdc",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1",
        "updatevnetdns"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/restartvm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                                         
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "configdns",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1",
        "updatevnetdns",
        "restartdc"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/configdns.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "DomainName": {
                "value": "[variables('DomainName')]"
              },              
              "ReverseLookup1": {
                "value": "[parameters('ReverseLookup1')]"
              },                                                                                                            
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "createous",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1",
        "updatevnetdns",
        "restartdc",
        "configdns"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/createous.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "BaseDN": {
                "value": "[variables('BaseDN')]"
              },              
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    }                                      
  ]
}
