{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "1adsite-vnet1",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetprefix": {
      "type": "string",
      "defaultValue": "10.1.0.0/16",
      "metadata": {
        "description": "VNet prefix"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.1.1.0/24",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },    
    "BastionsubnetPrefix": {
      "type": "string",
      "defaultValue": "10.1.253.0/24",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },        
    "subnet1Name": {
      "type": "string",
      "defaultValue": "1adsite-vnet1-subnet1",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "computerName": {
      "type": "string",
      "defaultValue": "dc1",
      "metadata": {
          "description": "Computer Name"
      }
    },
    "computerIP": {
      "type": "string",
      "defaultValue": "10.1.1.111",
      "metadata": {
          "description": "Computer IP Address"
      }
    },
    "Publisher": {
      "type": "string",
      "defaultValue": "MicrosoftWindowsServer",
      "metadata": {
          "description": "Image Publisher"
      }
    },
    "Offer": {
      "type": "string",
      "defaultValue": "WindowsServer",      
      "metadata": {
          "description": "Image Publisher Offer"
      }
    },            
    "OSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "metadata": {
            "description": "OS Version"
        }
    },
    "licenseType": {
      "type": "string",
      "defaultValue": "Windows_Server",
      "metadata": {
          "description": "License Type (Windows_Server or None)"
      }
    },     
    "DataDisk1Name": {
      "type": "string",
      "defaultValue": "NTDS",
      "metadata": {
          "description": "Data Disk Name 1"
      }
    },             
    "VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "VMSize"
        }
    },        
    "NetBiosDomain": {
      "type": "string",
      "defaultValue": "elliottfieldsjr",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },            
    "domainName": {
      "type": "string",
      "defaultValue": "elliottfieldsjr.com",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },                
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "The name of the Administrator of the new VM and Domain"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    },    
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    },    
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Region of Resources"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "VNet",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[parameters('vnetName')]"
              },
              "vnetprefix": {
                  "value": "[parameters('vnetprefix')]"
              },
              "subnet1Name": {
                  "value": "[parameters('subnet1Name')]"
              },
              "subnet1Prefix": {
                  "value": "[parameters('subnet1Prefix')]"
              },
              "BastionsubnetPrefix": {
                "value": "[parameters('BastionsubnetPrefix')]"
              },              
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "BastionHost",
      "dependsOn": [
        "VNet"
      ],
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/bastionhost.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "publicIPAddressName": {
                "value": "[concat(parameters('vnetName'),'-Bastion-pip')]"
              },
              "AllocationMethod": {
                "value": "Static"
              },              
              "vnetName": {
                  "value": "[parameters('vnetName')]"
              },
              "subnetName": {
                  "value": "AzureBastionSubnet"
              },
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployDCVM",
      "dependsOn": [
        "VNet",
        "BastionHost"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-2disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('computerName')]"
              },
              "computerIP": {
                  "value": "[parameters('computerIP')]"
              },
              "Publisher": {
                  "value": "[parameters('Publisher')]"
              },
              "Offer": {
                  "value": "[parameters('Offer')]"
              },
              "OSVersion": {
                "value": "[parameters('OSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('LicenseType')]"
              },            
              "DataDisk1Name": {
                "value": "[parameters('DataDisk1Name')]"
              },            
              "VMSize": {
                "value": "[parameters('VMSize')]"
              },
              "vnetName": {
                "value": "[parameters('vnetName')]"
              },            
              "subnetName": {
                "value": "[parameters('subnet1Name')]"
              },            
              "vnetprefix": {
                "value": "[parameters('vnetprefix')]"
              },            
              "subnetPrefix": {
                "value": "[parameters('subnet1Prefix')]"
              },                                                                                                            
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "promotedc1",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/firstdc.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('computerName')]"
              },
              "NetBiosDomain": {
                  "value": "[parameters('subnet1Name')]"
              },
              "DomainName": {
                "value": "[parameters('DomainName')]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              }, 
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "updatevnetdns",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/updatevnetdns.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[parameters('vnetName')]"
              },
              "vnetprefix": {
                  "value": "[parameters('vnetprefix')]"
              },
              "subnetName": {
                "value": "[parameters('subnet1Name')]"
              },                                                                                                            
              "subnetPrefix": {
                "value": "[parameters('subnet1Prefix')]"
              }, 
              "BastionsubnetPrefix": {
                "value": "[parameters('BastionsubnetPrefix')]"
              },                         
              "DNSServerIP": {
                "value": [
                  "[parameters('computerIP')]"
                ]
              },                                                                                                            
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "restartdc",
      "dependsOn": [
        "VNet",
        "BastionHost",
        "DeployDCVM",
        "promotedc1",
        "updatevnetdns"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/restartvm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[parameters('computerName')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                                         
              "location": {
                  "value": "[parameters('location')]"
              }
          }
      }
    }             
  ]
}
