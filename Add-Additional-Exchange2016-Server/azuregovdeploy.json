{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Exchange2016ISOUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Enter a valid URL that points to the Exchange 2016 CU .ISO"
      }
    },
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "The name of the Administrator of the new VM and Domain"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    },  
    "WindowsServerLicenseType": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "None",
        "Windows_Server"
      ],      
      "metadata": {
          "description": "Windows Server OS License Type"
      }
    },      
    "Location1": {
      "type": "string",
      "defaultValue": "USGovVirginia",
      "metadata": {
        "description": "Choose Region (Example:  USGovVirginia)"
      }
    },
    "Location2": {
      "type": "string",
      "defaultValue": "USGovTexas",
      "metadata": {
        "description": "Choose Region (Example:  USGovTexas)"
      }
    },           
    "NamingConvention": {
      "type": "string",
      "defaultValue": "khl",
      "metadata": {
        "description": "Environment Naming Convention"
      }
    },
    "NetBiosDomain": {
      "type": "string",
      "defaultValue": "killerhomelab",
      "metadata": {
          "description": "NetBios Domain Name"
      }
    },    
    "TLD": {
      "type": "string",
      "defaultValue": "com",
      "allowedValues": [
        "com",
        "net",
        "org",
        "edu",
        "gov",
        "mil"
      ],      
      "metadata": {
          "description": "Top-Level Domain Name"
      }
    },                     
    "vnet1ID": {
      "type": "string",
      "defaultValue": "16.1",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },    
    "vnet2ID": {
      "type": "string",
      "defaultValue": "16.2",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },            
    "EXOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "Exchange Server OS Version"
      }
    },            
    "EX11VMSize": {
        "type": "string",
        "defaultValue": "Standard_D8s_v3",
        "metadata": {
            "description": "Exchange Server1 VMSize"
        }
    },                                                                 
    "EX22VMSize": {
        "type": "string",
        "defaultValue": "Standard_D8s_v3",
        "metadata": {
            "description": "Exchange Server22 VMSize"
        }
    },                                                                                                                
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    }    
  },
  "variables": {
    "vnet1Name": "[concat(parameters('NamingConvention'),'-VNet1')]",
    "vnet1subnet1Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet1')]",    
    "vnet2Name": "[concat(parameters('NamingConvention'),'-VNet2')]",
    "vnet2subnet1Name": "[concat(parameters('NamingConvention'),'-VNet2-Subnet1')]",    
    "dc1name": "[concat(parameters('NamingConvention'),'-dc-01')]",           
    "dc2name": "[concat(parameters('NamingConvention'),'-dc-02')]",               
    "ex11name": "[concat(parameters('NamingConvention'),'-ex16-11')]",           
    "ex11IP": "[concat(parameters('vnet1ID'),'.1.',variables('ex11lastoctet'))]",         
    "ex11lastoctet": "111",    
    "ex22name": "[concat(parameters('NamingConvention'),'-ex16-22')]",           
    "ex22IP": "[concat(parameters('vnet2ID'),'.1.',variables('ex22lastoctet'))]",  
    "ex22lastoctet": "122",                                    
    "domainName": "[concat(parameters('NetBiosDomain'),'.',parameters('TLD'))]",
    "BaseDN": "[concat('DC=',parameters('NetBiosDomain'),',DC=',parameters('TLD'))]",
    "SRVOUPath": "[concat('OU=Servers,',variables('BaseDN'))]",
    "DB11Name": "[concat(parameters('NamingConvention'),'-16-db11')]",
    "DB22Name": "[concat(parameters('NamingConvention'),'-16-db22')]"
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployex11",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-3disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex11name')]"
              },
              "computerIP": {
                  "value": "[variables('ex11IP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('EXOSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },   
              "DataDisk1Name": {
                "value": "Exchange"
              },            
              "DataDisk2Name": {
                "value": "Software"
              },                                                             
              "VMSize": {
                "value": "[parameters('ex11VMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },            
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "DomainJoinEX11",
      "dependsOn": [
        "deployex11"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/domainjoin.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex11name')]"
              },
              "domainName": {
                  "value": "[variables('domainName')]"
              },
              "OUPath": {
                  "value": "[variables('SRVOUPath')]"
              },
              "domainJoinOptions": {
                  "value": 3
              },
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                             
              "location": {
                  "value": "[parameters('Location1')]"
              }
          }
      }
    },                
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployex22",
      "dependsOn": [
        "deployex11",
        "DomainJoinEX11"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-3disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex22name')]"
              },
              "computerIP": {
                  "value": "[variables('ex22IP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('EXOSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },           
              "DataDisk1Name": {
                "value": "Exchange"
              },            
              "DataDisk2Name": {
                "value": "Software"
              },                                        
              "VMSize": {
                "value": "[parameters('ex22VMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet2Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet2subnet1Name')]"
              },            
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[parameters('Location2')]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "DomainJoinEX22",
      "dependsOn": [
        "deployex11",
        "DomainJoinEX11",
        "deployex22"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/domainjoin.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex22name')]"
              },
              "domainName": {
                  "value": "[variables('domainName')]"
              },
              "OUPath": {
                  "value": "[variables('SRVOUPath')]"
              },
              "domainJoinOptions": {
                  "value": 3
              },
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                             
              "location": {
                  "value": "[parameters('Location2')]"
              }
          }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "prepareexchange16s11",
      "dependsOn": [
        "deployex11",
        "DomainJoinEX11",
        "deployex22",
        "DomainJoinEX22"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/prepareexchange16.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex11name')]"
              },
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              }, 
              "ExchangeSASUrl": {
                  "value": "[parameters('Exchange2016ISOUrl')]"
              },                                    
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                                                                                 
              "location": {
                  "value": "[parameters('Location1')]"
              },          
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
          }
      }
    },                                                
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "prepareexchange16s22",
      "dependsOn": [
        "deployex11",
        "DomainJoinEX11",
        "deployex22",
        "DomainJoinEX22",
        "prepareexchange16s11"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/prepareexchange16.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex22name')]"
              },
              "ExchangeSASUrl": {
                  "value": "[parameters('Exchange2016ISOUrl')]"
              },                                    
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },                                        
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                                                                                 
              "location": {
                  "value": "[parameters('Location2')]"
              },          
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
          }
      }
    },   
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "installexchange11",
      "dependsOn": [
        "deployex11",
        "DomainJoinEX11",
        "deployex22",
        "DomainJoinEX22",
        "prepareexchange16s11",
        "prepareexchange16s22"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/exchange16.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex11name')]"
              },
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },
              "SetupDC": {
                  "value": "[variables('dc1name')]"
              },                                                      
              "location": {
                  "value": "[parameters('Location1')]"
              },          
              "DBName": {
                  "value": "[variables('db11name')]"
              },       
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                                                                                                      
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
          }
      }
    }, 
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "installexchange22",
      "dependsOn": [
        "deployex11",
        "DomainJoinEX11",
        "deployex22",
        "DomainJoinEX22",
        "prepareexchange16s11",
        "prepareexchange16s22",        
        "installexchange11"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/exchange16.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex22name')]"
              },
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },
              "SetupDC": {
                  "value": "[variables('dc2name')]"
              },                                                      
              "location": {
                  "value": "[parameters('Location2')]"
              },          
              "DBName": {
                  "value": "[variables('db22name')]"
              },       
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                                                                                                      
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }          
          }
      }
    }
  ]
}