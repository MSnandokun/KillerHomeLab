{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"parameters": {
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Specifies the name of the key vault."
      }
    },
      "location": {
          "type": "string",
        "metadata": {
          "description": "Region of Resources"
        }
      }
},
  "variables": {
    "keysPermissions": [
      "list"
      ],
    "secretsPermissions": [
      "list"
      ],
    "skuName":  "Premium",
    "tenantID": "[subscription().tenantId]",
    "BackupObjectID": "9a7b9a6d-0996-4d52-889f-46473877d766",
    "BackupAppID": "ff281ffe-705c-4f53-9f37-a40e6f2c68f3",
    "enabledForDeployment": true,
    "enabledForDiskEncryption": true,        
    "enabledForTemplateDeployment": true,
    "enableSoftDelete": true,
    "enablePurgeProtection": true
  },
"resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "name": "[parameters('keyVaultName')]",
      "apiVersion": "2016-10-01",
      "location": "[parameters('location')]",
      "properties": {
        "enabledForDeployment": "[variables('enabledForDeployment')]",
        "enabledForDiskEncryption": "[variables('enabledForDiskEncryption')]",
        "enabledForTemplateDeployment": "[variables('enabledForTemplateDeployment')]",
        "enabledSoftDelete": "[variables('enableSoftDelete')]",        
        "enabledPurgeProtection": "[variables('enablePurgeProtection')]",                
        "tenantId": "[variables('tenantId')]",
        "accessPolicies": [
          {
            "objectId": "[variables('BackupObjectID')]",
            "applicationId": "[variables('BackupAppID')]",
            "tenantId": "[variables('tenantId')]",
            "permissions": {
              "keys": "[variables('keysPermissions')]",
              "secrets": "[variables('secretsPermissions')]"      
            }
          }
        ],
        "sku": {
          "name": "[variables('skuName')]",
          "family": "A"
        },
        "networkAcls": {
            "defaultAction": "Allow",
            "bypass": "AzureServices"
        }
      }
    }
   ]
}
