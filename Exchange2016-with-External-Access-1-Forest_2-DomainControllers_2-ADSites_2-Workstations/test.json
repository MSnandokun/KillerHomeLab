{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ExchangeOrgName": {
      "type": "string",
      "defaultValue": "49ers",
      "metadata": {
        "description": "Enter an Exchange Organization Name"
      }
    },
    "Exchange2016ISOUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Enter a valid URL that points to the Exchange 2016 CU .ISO"
      }
    },
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "The name of the Administrator of the new VM and Domain"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    }, 
    "ToEmail": {
        "type": "string",
        "metadata": {
            "description": "Enter an Email Address to send the Trusted CA Certificates"
        }
    },    
    "Location1": {
      "type": "string",
      "defaultValue": "EastUS",
      "metadata": {
        "description": "Choose Region (Example:  EastUS)"
      }
    },
    "Location2": {
      "type": "string",
      "defaultValue": "WestUS",
      "metadata": {
        "description": "Choose Region (Example:  WestUS)"
      }
    },           
    "NamingConvention": {
      "type": "string",
      "defaultValue": "khl",
      "metadata": {
        "description": "Environment Naming Convention"
      }
    },
    "NetBiosDomain": {
      "type": "string",
      "defaultValue": "killerhomelab",
      "metadata": {
          "description": "NetBios Domain Name"
      }
    },    
    "TLD": {
      "type": "string",
      "defaultValue": "com",
      "allowedValues": [
        "com",
        "net",
        "org",
        "edu",
        "gov",
        "mil"
      ],      
      "metadata": {
          "description": "Top-Level Domain Name"
      }
    }, 
    "vnet1ID": {
      "type": "string",
      "defaultValue": "16.1",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },    
    "vnet2ID": {
      "type": "string",
      "defaultValue": "16.2",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },    
    "ReverseLookup1": {
      "type": "string",
      "defaultValue": "1.16",
      "metadata": {
          "description": "DNS Reverse Lookup Zone1 Prefix"
      }
    },                    
    "ReverseLookup2": {
      "type": "string",
      "defaultValue": "2.16",
      "metadata": {
          "description": "DNS Reverse Lookup Zone2 Prefix"
      }
    },             
    "RootCAName": {
      "type": "string",
      "defaultValue": "Offline Root CA",
      "metadata": {
          "description": "Offline Root CA Name"
      }
    },                    
    "IssuingCAName": {
      "type": "string",
      "defaultValue": "Issuing CA",
      "metadata": {
          "description": "Issuing CA Name"
      }
    },           
    "DC1OSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2019-Datacenter",
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "Domain Controller1 OS Version"
      }
    },    
    "DC2OSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2019-Datacenter",
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "Domain Controller1 OS Version"
      }
    },
    "RCAOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2019-Datacenter",
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "Offline Root CA OS Version"
      }
    },            
    "ICAOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2019-Datacenter",
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "Issuing CA OS Version"
      }
    },            
    "OCSPOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2019-Datacenter",
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "OCSP OS Version"
      }
    },            
    "FSOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2019-Datacenter",
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "File Serever OS Version"
      }
    },                        
    "EXOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2016-Datacenter"
      ],      
      "metadata": {
          "description": "Exchange Server OS Version"
      }
    },            
    "WK1OSVersion": {
      "type": "string",
      "defaultValue": "19h1-pro",
      "allowedValues": [
        "19h1-pro"
      ],      
      "metadata": {
          "description": "Worksation1 OS Version"
      }
    },            
    "WK2OSVersion": {
      "type": "string",
      "defaultValue": "19h1-pro",
      "allowedValues": [
        "19h1-pro"
      ],      
      "metadata": {
          "description": "Worksation2 OS Version"
      }
    },             
    "DC1VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Domain Controller1 VMSize"
        }
    },        
    "DC2VMSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "metadata": {
          "description": "Domain Controller2 VMSize"
      }
    },     
    "RCAVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Offline Root CA VMSize"
        }
    },
    "ICAVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Issuing CA VMSize"
        }
    },            
    "OCSPVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "OCSP VMSize"
        }
    },                           
    "FS1VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "File Share Witeness Server1 VMSize"
        }
    },                        
    "EX1VMSize": {
        "type": "string",
        "defaultValue": "Standard_D8s_v3",
        "metadata": {
            "description": "Exchange Server1 VMSize"
        }
    },                                            
    "WK1VMSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "metadata": {
          "description": "Workstation1 VMSize"
      }
    },            
    "FS2VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "File Share Witeness Server2 VMSize"
        }
    },                        
    "EX2VMSize": {
        "type": "string",
        "defaultValue": "Standard_D8s_v3",
        "metadata": {
            "description": "Exchange Server2 VMSize"
        }
    },                                                    
    "WK2VMSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "metadata": {
          "description": "Workstation2 VMSize"
      }
    },                                                                           
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    }    
  },
  "variables": {
    "vnet1Name": "[concat(parameters('NamingConvention'),'-VNet1')]",
    "vnet1Prefix": "[concat(parameters('vnet1ID'),'.0.0/16')]",
    "vnet1subnet1Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet1')]",    
    "vnet1subnet1Prefix": "[concat(parameters('vnet1ID'),'.1.0/24')]",    
    "vnet1subnet2Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet2')]",    
    "vnet1subnet2Prefix": "[concat(parameters('vnet1ID'),'.2.0/24')]",    
    "vnet1BastionsubnetPrefix": "[concat(parameters('vnet1ID'),'.253.0/24')]",        
    "vnet2Name": "[concat(parameters('NamingConvention'),'-VNet2')]",
    "vnet2Prefix": "[concat(parameters('vnet2ID'),'.0.0/16')]",
    "vnet2subnet1Name": "[concat(parameters('NamingConvention'),'-VNet2-Subnet1')]",    
    "vnet2subnet1Prefix": "[concat(parameters('vnet2ID'),'.1.0/24')]",    
    "vnet2subnet2Name": "[concat(parameters('NamingConvention'),'-VNet2-Subnet2')]",    
    "vnet2subnet2Prefix": "[concat(parameters('vnet2ID'),'.2.0/24')]",    
    "vnet2BastionsubnetPrefix": "[concat(parameters('vnet2ID'),'.253.0/24')]",        
    "dc1name": "[concat(parameters('NamingConvention'),'-dc-01')]",           
    "dc1IP": "[concat(parameters('vnet1ID'),'.1.',variables('dc1lastoctet'))]", 
    "dc1lastoctet": "101",           
    "rcaname": "[concat(parameters('NamingConvention'),'-rca-01')]",           
    "rcaIP": "[concat(parameters('vnet1ID'),'.1.',variables('rcalastoctet'))]",            
    "rcalastoctet": "99",
    "icaname": "[concat(parameters('NamingConvention'),'-ica-01')]",           
    "icaIP": "[concat(parameters('vnet1ID'),'.1.',variables('icalastoctet'))]",
    "icalastoctet": "102",            
    "ocspname": "[concat(parameters('NamingConvention'),'-ocsp-01')]",           
    "ocspIP": "[concat(parameters('vnet1ID'),'.1.',variables('ocsplastoctet'))]",                            
    "ocsplastoctet": "103",                            
    "fs1name": "[concat(parameters('NamingConvention'),'-fs-01')]",           
    "fs1IP": "[concat(parameters('vnet1ID'),'.1.',variables('fs1lastoctet'))]",  
    "fs1lastoctet": "104",                                                              
    "ex1name": "[concat(parameters('NamingConvention'),'-ex16-01')]",           
    "ex1IP": "[concat(parameters('vnet1ID'),'.1.',variables('ex1lastoctet'))]",         
    "ex1lastoctet": "110",    
    "wk1name": "[concat(parameters('NamingConvention'),'-wk-01')]",           
    "wk1IP": "[concat(parameters('vnet1ID'),'.2.',variables('wk1lastoctet'))]",        
    "wk1lastoctet": "201",            
    "dc2name": "[concat(parameters('NamingConvention'),'-dc-02')]",           
    "dc2IP": "[concat(parameters('vnet2ID'),'.1.',variables('dc2lastoctet'))]",
    "dc2lastoctet": "101",            
    "fs2name": "[concat(parameters('NamingConvention'),'-fs-02')]",           
    "fs2IP": "[concat(parameters('vnet2ID'),'.1.',variables('fs2lastoctet'))]",       
    "fs2lastoctet": "104",                                                         
    "ex2name": "[concat(parameters('NamingConvention'),'-ex16-02')]",           
    "ex2IP": "[concat(parameters('vnet2ID'),'.1.',variables('ex2lastoctet'))]",  
    "ex2lastoctet": "110",                                    
    "wk2name": "[concat(parameters('NamingConvention'),'-wk-02')]",           
    "wk2IP": "[concat(parameters('vnet2ID'),'.2.',variables('wk2lastoctet'))]",        
    "wk2lastoctet": "201",                
    "ReverseLookup1": "[concat('1.',parameters('ReverseLookup1'))]",    
    "ReverseLookup2": "[concat('1.',parameters('ReverseLookup2'))]",        
    "DCDataDisk1Name": "NTDS",            
    "domainName": "[concat(parameters('NetBiosDomain'),'.',parameters('TLD'))]",
    "FromEmail": "[concat(parameters('adminUserName'),'@',variables('domainName'))]"    
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "sendcompletionemail",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/sendemail.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('icaname')]"
              },
              "ToEmail": {
                  "value": "[parameters('ToEmail')]"
              },
              "FromEmail": {
                  "value": "[variables('FromEmail')]"
              },
              "IssuingCAServerName": {
                  "value": "[variables('icaname')]"
              },                                                                                                                                      
              "RootCAServerName": {
                  "value": "[variables('rcaname')]"
              },                                                                                                                                                    
              "IssuingCAName": {
                  "value": "[parameters('IssuingCAName')]"
              },
              "RootCAName": {
                  "value": "[parameters('RootCAName')]"
              },
              "RootDomainFQDN": {
                  "value": "[variables('domainName')]"
              },
              "ExchangeServerName": {
                  "value": "[variables('ex1name')]"
              },
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                                                                                                      
              "location": {
                  "value": "[parameters('Location1')]"
              },          
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           
          }
      }
    }                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
  ]
}