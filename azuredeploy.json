{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "DomID": {
        "type": "string",
        "metadata": {
          "description": "Lab Unique Identifier"
        }
      },
      "vnetName": {
        "type": "string",
        "metadata": {
          "description": "VNet name"
        }
      },
      "vnetprefix": {
        "type": "string",
        "metadata": {
          "description": "VNet prefix"
        }
      },
      "subnet1Prefix": {
        "type": "string",
        "metadata": {
          "description": "Subnet 1 Prefix"
        }
      },
      "subnet1Name": {
        "type": "string",
        "metadata": {
          "description": "Subnet 1 Name"
        }
      },
      "subnet2Prefix": {
        "type": "string",
        "metadata": {
          "description": "Subnet 2 Prefix"
        }
      },
      "subnet2Name": {
        "type": "string",
        "metadata": {
          "description": "Subnet 2 Name"
        }
      },
      "vnetprefixes": {
        "defaultValue": [""],
        "type": "array"
      },
      "subnets": {
        "defaultValue": [
          {
            "name": "[parameters('subnet1Name')]",
            "prefix": "[parameters('subnet1Prefix')]"
          },
          {
            "name": "[parameters('subnet2Name')]",
            "prefix": "[parameters('subnet2Prefix')]"
          }
        ],
        "type": "array"
      },
      "location": {
        "type": "string",
        "metadata": {
          "description": "Region of Resources"
        }
      }
    },
    "variables": {
        "apiVersion":  "2016-03-30",
        "subnetCount": "[length(parameters('subnets'))]"
    },
    "resources": [
      {
        "apiVersion": "2018-10-01",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('vnetName')]",
        "location": "[parameters('location')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": "[parameters('vnetPrefixes')]"
          },
          "copy": [{
            "name": "subnets",
            "count": "[variables('subnetCount')]",
            "input": {
              "name": "[parameters('subnets')[copyIndex('subnets')]['name']]",
              "properties":{
                "addressprefix": "[parameters('subnets')[copyIndex('subnets')]['prefix']]"
              }
            }
          }]
        }
      }
    ]
  }